---
import Section from './Section.astro';
---

<Section>
  <div
    class="content prose mt-4 max-w-none text-base leading-8 text-black dark:prose-invert prose-img:rounded-lg prose-img:shadow-xl dark:text-white prose-img:dark:shadow-stone-800"
  >
    <slot />
  </div>
</Section>

<style is:global>
  /* Inline code styling - Starlight inspired */
  .content :not(pre) > code {
    background-color: rgba(160, 110, 90, 0.12);
    border: 1px solid rgba(160, 110, 90, 0.2);
    border-radius: 0.25rem;
    padding: 0.125rem 0.375rem;
    font-size: 0.875em;
    font-family: var(--sl-font-mono, 'IBM Plex Mono', Consolas, monospace);
    font-weight: 500;
    color: rgb(234, 131, 90);
  }

  .dark .content :not(pre) > code {
    background-color: rgba(160, 110, 90, 0.15);
    border-color: rgba(160, 110, 90, 0.25);
    color: rgb(234, 131, 90);
  }
</style>
