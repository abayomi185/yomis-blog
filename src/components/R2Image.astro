---
import PostImage from './PostImage.astro';

export interface Props {
  key: string;
  alt: string;
  caption?: string;
  maxWidth?: string;
  class?: string;
  showCaption?: boolean;
  width?: number;
  height?: number;
}

const { key, ...rest } = Astro.props;

// Construct the full image URL
const imageUrl = '/static/' + key;
---

<PostImage key={imageUrl} {...rest} />
